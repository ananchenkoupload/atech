{% if section.settings.title == "BESTSELLERS" %}
	<div class="page-width2 section-collection {% if section.settings.paddings != "default" %}{{ section.settings.paddings }}{% endif %}" id="bestsellers">
{% elsif section.settings.title == "Cities Collection" %}
	<div class="page-width2 section-collection {% if section.settings.paddings != "default" %}{{ section.settings.paddings }}{% endif %}" id="citiescollection">
{% elsif section.settings.title == "Room Spray" %}
	<div class="page-width2 section-collection {% if section.settings.paddings != "default" %}{{ section.settings.paddings }}{% endif %}" id="roomspray">
{% elsif section.settings.title == "Hair And Body Mist" %}
	<div class="page-width2 section-collection {% if section.settings.paddings != "default" %}{{ section.settings.paddings }}{% endif %}" id="hairandbodymist">
{% elsif section.settings.title == "Scent Machines" %}
	<div class="scent-machine {% if section.settings.paddings != "default" %}{{ section.settings.paddings }}{% endif %}">
		<div class="page-width2 section-collection" id="scentmachines">
{% else %}
	<div class="page-width2 section-collection m-common-sl {% if section.settings.paddings != "default" %}{{ section.settings.paddings }}{% endif %}">
{% endif %}

{% if section.settings.title != blank %}
	<div class="section-header text-center {% if section.settings.title == " BESTSELLERS" %}bestsellerstitle
		active{% elsif section.settings.title=="Cities Collection" %}citiescollectiontitle{% elsif
		section.settings.title=="Room Spray" %}roomspraytitle{% elsif
		section.settings.title=="Hair And Body Mist" %}hairandbodymisttitle{% endif %}">
		<h2 class="h3">{% if template == 'cart' %}{{ section.settings.title_cart | escape }}{% else %}{{ section.settings.title | escape }}{% endif %}</h2>
	</div>
{% endif %}

{%- assign collection = collections[section.settings.collection] -%}
	{% case section.settings.grid %}
		{% when 2 %}
			{%- assign max_height = 530 -%}
			{%- assign grid_item_width = 'medium-up--one-half' -%}
		{% when 3 %}
			{%- assign max_height = 345 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-third' -%}
		{% when 4 %}
			{%- assign max_height = 250 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
		{% when 5 %}
			{%- assign max_height = 195 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-fifth' -%}
		{% else %}
			{%- assign max_height = 195 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-fifth' -%}
	{% endcase %}

	{%- assign product_limit = section.settings.grid -%}

	<div data-items="{{ section.settings.grid }}"
		class="{% if section.settings.title == "BESTSELLERS" %} custom-slider {% elsif section.settings.title=="Cities Collection" %}
		 custom-slider {% elsif section.settings.title=="Room Spray" %} custom-slider {%
		elsif section.settings.title=="Hair And Body Mist" %} custom-slider {%elsif section.settings.title == "Scent Machines" %} grid grid--uniform grid--view-items no-custom-slider {% else
		%} custom-slider {% endif %}">
		{% for product in collection.products limit: product_limit %}
			<div class="product-slide-wrapper {% if section.settings.title == "Scent Machines" %} grid__item grid__item--{{section.id}} {{ grid_item_width }} {% endif %}">
				{% if section.settings.title == "Scent Machines" %}
					<div class="product-top scent-machines rte">
						<link rel="stylesheet"
							href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
							integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
							crossorigin="anonymous">
						<div class="product-top scent-machines link-div">
							<h3 class="h6 product-top scent-machines top-link" href="{{ product.url }}">{{ product.title }}
							</h3>
						</div>
						<div class="reviews">
							{% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', jm_style: '',
							concierge_install: true, product: product %}
						</div>
					</div>
				{% endif %}
				{% include 'product-card-grid2', max_height: max_height, product: product, show_vendor: section.settings.show_vendor %}
				{% if section.settings.title == "Scent Machines" %}
					<div class="product-description rte" itemprop="description">
						{{ product.description }}
					</div>
				{% endif %}
				<form action="/cart/add" method="post" id="product-form- {{ product.id }}">
					<input type="hidden" name="id" value="{{ product.variants.first.id }}">
					<div class="custom-add-to-cart">
						<button type="submit" name="add">Add to cart - {% include 'product-price' %}</button>
					</div>
				</form>
			</div>
		{% else %}
			{% for i in (1..product_limit) %}
				<div class="grid__item grid__item--{{section.id}} {{ grid_item_width }}">
					<div class="grid-view-item product-card">
						<a class="grid-view-item__link grid-view-item__image-container full-width-link" href="#">
							<span class="visually-hidden">{{ 'homepage.onboarding.product_title' | t }}</span>
						</a>
						<div class="grid-view-item__image-wrapper">
							{% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
							{{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
						</div>
						<div class="h4 grid-view-item__title" aria-hidden="true">{{ 'homepage.onboarding.product_title' | t }}</div>
						{% include 'product-price' %}
					</div>
				</div>
			{% endfor %}
		{% endfor %}
	</div>

	{% if section.settings.show_view_all %}
		<!-- <hr class="hr--invisible" aria-hidden="true" /> -->
		<div class="section-button-holder text-center">
			<div class="links-grid">
				<div>
					<a href="{{ collection.url }}" class="btn2 btn2-link"
						aria-label="{{ 'collections.general.view_all_label' | t: collection_name: collection.title }}">
						{% comment %} {{ 'collections.general.view_all' | t }} {% endcomment %}
						{% if section.settings.title == "Scent Machines" %}
						SHOP ALL SCENT MACHINES
						{% else %}
						shop all
						{% endif %}
					</a>
				</div>
