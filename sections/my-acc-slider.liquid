
<div class="page-width2 section-collection m-common-sl">


{% if section.settings.title != blank %}
	<div class="section-header text-center">
        <a href="{{ section.settings.title-link}}">
		    <h2 class="h3">{{ section.settings.title | escape }}</h2>
        </a>
	</div>
{% endif %}

{%- assign collection = collections[section.settings.collection] -%}
	{% case section.settings.grid %}
		{% when 2 %}
			{%- assign max_height = 530 -%}
			{%- assign grid_item_width = 'medium-up--one-half' -%}
		{% when 3 %}
			{%- assign max_height = 345 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-third' -%}
		{% when 4 %}
			{%- assign max_height = 250 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
		{% when 5 %}
			{%- assign max_height = 195 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-fifth' -%}
		{% else %}
			{%- assign max_height = 195 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-fifth' -%}
	{% endcase %}

	{%- assign product_limit = section.settings.grid -%}

	<div data-items="{{ section.settings.grid }}"
		class="custom-slider">
		{% for product in collection.products %}
			<div class="product-slide-wrapper">
				{% include 'product-card-grid2', max_height: max_height, product: product, show_vendor: section.settings.show_vendor %}
			</div>
		{% endfor %}
	</div>
	<div class="section-button-holder text-center">
		<div class="links-grid">
			<div>
				<a href="{{ section.settings.button_link }}" class="btn2" aria-label="{{ ariaLabel }}">{{- section.settings.button_name | escape -}}</a>
			</div>
		</div>
	</div>
</div>

<style>
	@media screen and (max-width:767px){
		.slideshow-wrapper .slick-next.slick-arrow, .slideshow-wrapper .slick-prev.slick-arrow, .custom-slider .slick-next.slick-arrow, .custom-slider .slick-prev.slick-arrow {
			display:inline-block !important;
		}

		.template-customers-account .main-content .shopify-section > div:not([class*="page-header-wrapper"]) {
			padding-bottom: 0;
		}
		.template-customers-account .section-collection {
			padding-bottom: 50px !important;
		}
	}
	
	.section-header.text-center a{
		text-decoration: none;
	}
</style>

{% if section.settings.title == "Scent Machines" %}
	</div>
{% endif %}

<script type="text/javascript">
	$(document).ready(function () {
		$('.m-common-sl').closest('.shopify-section').addClass('active');
		
	});
	$(document).ready(function () {
		$('.custom-slider').slick({
	        speed: 300,
	        infinite: true,
	        slidesToShow: 5,
	        slidesToScroll: 1,
	        prevArrow: '<button type="button" class="slick-prev"></button>',
	        nextArrow: '<button type="button" class="slick-next"></button>',
	        responsive: [
	          {
	            breakpoint: 1050,
	            settings: {
	              arrows: false,
	              slidesToShow: 3,
	              slidesToScroll: 1
	            }
	          },
	          {
	            breakpoint: 767,
	            settings: {
	              arrows: false,
	              slidesToShow: 2,
	              slidesToScroll: 1
	            }
	          },
	          {
	            breakpoint: 480,
	            settings: {
	              arrows: true,
	              centerMode: false,
	              slidesToShow: 1,
	              // centerPadding: '50px',
	              slidesToScroll: 1 
	            }
	          }
	        ]
	    });
	});
</script> 

