{% schema %}
{
	"name": "Customize Collection",
    
	"settings": [
        {
            "type": "header",
            "content": "Other settings",
            "info": "Manage Plugins on [POWR.io](https://www.powr.io)"
        },
		{
			"type": "select",
			"id": "layout",
			"label": "Layout",
			"default": "grid",
			"options": [
				{
					"value": "grid",
					"label": "Grid"
				},
				{
					"value": "list",
					"label": "List"
				}
			]
		},
		{
			"type": "range",
			"id": "grid",
			"label": "Products per row (grid only)",
			"default": 4,
			"min": 2,
			"max": 5,
			"step": 1
		},
		{
			"type": "range",
			"id": "rows",
			"label": "Rows per page (grid only)",
			"default": 2,
			"min": 2,
			"max": 8,
			"step": 1
		},
		{
			"type": "checkbox",
			"id": "show_vendor",
			"label": "Show product vendors",
			"default": false
		}
	]
}
{% endschema %}

